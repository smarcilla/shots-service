{
  "name": "shots-service",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.10"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:sim": "tsx watch src/sim/index.ts ./data/atletico-vs-madrid.json --seed=42",
    "typecheck": "tsc -p tsconfig.dev.json --noEmit",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "test": "vitest run",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,js,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4",
    "typescript-eslint": "^8.8.1"
  }
}
