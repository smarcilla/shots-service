{
  "info": {
    "name": "Shots Service",
    "description": "Colección para validar el endpoint POST /simulate/by-id del shots-service.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.1.0"
  },
  "item": [
    {
      "name": "Simular partido por id (200)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Incluye resumen de simulación\", function () {",
              "  const body = pm.response.json();",
              "  pm.expect(body).to.have.property('summary');",
              "  pm.expect(body.summary).to.have.property('iterations');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id\": \"{{matchId}}\",\n  \"runs\": 1000\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/simulate/by-id",
          "host": ["{{baseUrl}}"],
          "path": ["simulate", "by-id"]
        }
      },
      "response": []
    },
    {
      "name": "Simular con seed fija (200)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Conserva runs solicitados\", function () {",
              "  const body = pm.response.json();",
              "  pm.expect(body.runs).to.eql(500);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id\": \"{{matchId}}\",\n  \"runs\": 500,\n  \"seed\": 12345\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/simulate/by-id",
          "host": ["{{baseUrl}}"],
          "path": ["simulate", "by-id"]
        }
      },
